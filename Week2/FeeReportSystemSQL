CREATE DATABASE feereportsystem;
USE feereportsystem;
CREATE TABLE admin (id INT PRIMARY KEY AUTO_INCREMENT,username VARCHAR(50) NOT NULL UNIQUE,password VARCHAR(255) NOT NULL);
INSERT INTO admin (username, password) VALUES ('Administrator004', 'root9876');
CREATE TABLE accountant (id INT PRIMARY KEY AUTO_INCREMENT,name VARCHAR(100) NOT NULL,email VARCHAR(100) NOT NULL UNIQUE,phone VARCHAR(15) NOT NULL,password VARCHAR(255) NOT NULL);
CREATE TABLE student (id INT PRIMARY KEY AUTO_INCREMENT,name VARCHAR(100) NOT NULL,email VARCHAR(100) NOT NULL UNIQUE,course VARCHAR(100) NOT NULL,fee DOUBLE NOT NULL,paid DOUBLE NOT NULL,due DOUBLE NOT NULL,address TEXT NOT NULL,phone VARCHAR(15) NOT NULL);
